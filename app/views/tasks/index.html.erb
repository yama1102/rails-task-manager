<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li>
<% if task.completed %>
<i class="fas fa-check-square"></i>
<% else  %>
<i class="fas fa-square"></i>
<% end %>
<%= link_to task.title, task_path(task) %><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?"} %>
</li>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
